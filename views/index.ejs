<div class="container">
  <h1>Order Food</h1>
  <div class="row">
    <form class="col s12" method="POST" action="/submitOrder">
      <div class="row">
        <div class="input-field col s12 m6">
          <i class="material-icons prefix">account_circle</i>
          <input id="firstName" type="text" class="validate" name="firstName">
          <label for="firstName">First Name</label>
        </div>
        <div class="input-field col s11 m6 push-s1">
          <input id="last_name" type="text" class="validate" name="lastName">
          <label for="last_name">Last Name</label>
        </div>

        <div class="input-field col s12">
          <i class="material-icons prefix">phone</i>
          <input id="tel" type="tel" class="validate" name="phone">
          <label for="tel">Telephone</label>
        </div>
        <i class="material-icons col s1">map</i>
        <div class="input-field col s11">
          <select id="stadium" name="stadium">
            <option value="" disabled selected>Choose your option</option>
            <!--<option value="1">Option 1</option> -->
          </select>
          <label>Choose Your Stadium Location</label>
        </div>
        <i class="material-icons col s1">store_mall_directory</i>
        <div class="input-field col s11">
          <select id="vendor" name="vendor">
            <option value="" disabled selected>Choose your option</option>
            <!-- <option value="1">Option 1</option> -->
          </select>
          <label>Choose Vendor</label>
        </div>
      </div>

      <br>
      <div class="carousel carousel-slider">

      </div>
      <div class="waves-effect waves btn white black-text leftButton">&lt;</div>
      <div class="waves-effect waves btn white black-text rightButton">&gt;</div>
      <div class="row">
        <input class="waves-effect s8 push-s2 col red darken-3 white-text" id="submit" type="submit" value="Order Food">
      </div>

    </form>
  </div>
</div>

